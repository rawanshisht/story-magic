# Database
DATABASE_URL="postgresql://username:password@localhost:5432/storybook_generator?schema=public&sslmode=verify-full"

# Firebase Authentication - Get these from https://console.firebase.google.com
# 1. Create a Firebase project
# 2. Enable Authentication with Google sign-in
# 3. Go to Project Settings > General > Your apps > Firebase SDK setup
NEXT_PUBLIC_FIREBASE_API_KEY="your-api-key"
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN="your-project.firebaseapp.com"
NEXT_PUBLIC_FIREBASE_PROJECT_ID="your-project-id"
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET="your-project.appspot.com"
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID="your-sender-id"
NEXT_PUBLIC_FIREBASE_APP_ID="your-app-id"

# Firebase Admin SDK - Generate from:
# Project Settings > Service Accounts > Generate New Private Key
FIREBASE_CLIENT_EMAIL="firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com"
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# OpenAI
OPENAI_API_KEY="sk-your-openai-api-key"
